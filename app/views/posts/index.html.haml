= render 'header'

.wrapper
  = form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form|
    = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-form__text-box"
    = form.submit "検索", class: "search-form__submit-btn"

  - @posts.each do |post|
    .contents.index
      .contents__product-name
        = post.product_name
      .contents__image
        = link_to "/posts/#{post.id}" do
          = image_tag post.image1.url(:thumb)
      .contents__appeal
        = post.appeal
      .contents__contributor
        = post.user.store.name
        店/
        = post.user.name