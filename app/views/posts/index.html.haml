= render 'header'

.wrapper
  .search-form
    %input.search-form__text-box{type: 'text'}
    %input.search-form__submit-btn{type: 'submit', value: '検索'}
  - @posts.each do |post|
    .contents.index
      .contents__product-name
        = post.product_name
      .contents__image
        = link_to "/posts/#{post.id}" do
          = image_tag post.image1.url(:thumb)
      .contents__appeal
        = post.appeal
      .contents__contributor
        = post.user.name